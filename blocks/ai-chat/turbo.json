{
  "extends": ["//"],
  "pipeline": {
    "codegen": {
      "inputs": ["./package.json"],
      "outputs": ["./src/types/generated/**"]
    },
    "build": {
      "dependsOn": ["^build", "codegen", "format"],
      "outputs": ["./dist/**"]
    },
    "lint:tsc": {
      "dependsOn": ["codegen"]
    },
    "format": {
      "cache": false,
      "dependsOn": ["codegen"]
    },
    "dev": {
      "persistent": true,
      "dependsOn": ["^build", "codegen"]
    },
    "serve": {
      "persistent": true,
      "dependsOn": ["build"]
    }
  }
}
