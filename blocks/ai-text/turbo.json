{
  "extends": ["//"],
  "pipeline": {
    "schema": {
      "inputs": ["./package.json"],
      "outputs": ["./src/types.gen.ts"]
    },
    "build": {
      "dependsOn": ["^build", "schema"],
      "outputs": ["./dist/**"]
    },
    "lint:tsc": {
      "dependsOn": ["schema"]
    },
    "lint:eslint": {
      "env": ["CHECK_TEMPORARILY_DISABLED_RULES"],
      "dependsOn": ["schema"]
    },
    "fix:eslint": {
      "cache": false,
      "dependsOn": ["^build", "schema"]
    },
    "format": {
      "cache": false,
      "dependsOn": ["schema"]
    },
    "dev": {
      "persistent": true,
      "dependsOn": ["^build", "schema"]
    },
    "serve": {
      "persistent": true,
      "dependsOn": ["build"]
    }
  }
}
