{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["./dist", "./.next"],
      "dependsOn": ["codegen"]
    },
    "codegen": {
      "cache": false,
      "outputs": ["./src/**/*.gen.*"]
    },
    "fix:eslint": {
      "cache": false
    },
    "lint:eslint": {
      "env": ["CHECK_TEMPORARILY_DISABLED_RULES"],
      "outputs": []
    },
    "lint:tsc": {
      "outputs": []
    },
    "@apps/hash-graph#codegen": {
      "dependsOn": ["^build"],
      "outputs": ["lib/graph/src/api/gen/**"]
    }
  }
}
