{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "postinstall": {
      "cache": false
    },
    "codegen": {
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["^build", "codegen"]
    },
    "test:unit": {
      "dependsOn": ["codegen"],
      "env": ["TEST_COVERAGE"]
    },
    "test:integration": {
      "dependsOn": ["codegen"],
      "env": ["TEST_COVERAGE"]
    },
    "test:system": {},
    "test:miri": {},
    "bench:unit": {
      "dependsOn": ["codegen"],
      "cache": false
    },
    "bench:integration": {
      "dependsOn": ["codegen"],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "dependsOn": ["codegen"]
    },
    "lint": {
      "dependsOn": ["codegen"]
    },
    "lint:clippy": {},
    "lint:eslint": {
      "env": ["CHECK_TEMPORARILY_DISABLED_RULES"],
      "dependsOn": ["codegen"]
    },
    "lint:tsc": {
      "dependsOn": ["codegen"]
    },
    "fix:eslint": {
      "dependsOn": ["codegen"]
    },
    "fix:clippy": {},
    "sentry:sourcemaps": {
      "dependsOn": ["build"]
    }
  },
  "globalDependencies": [
    "**/turbo.json",
    ".github/actions/**/*.yml",
    ".github/scripts/**/*.rs",
    ".github/workflows/**/*",
    ".env*",
    ".justfile",
    ".yarnrc",
    "Cargo.toml",
    "package.json",
    "apps/hash-external-services/**"
  ]
}
