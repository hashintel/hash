{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "codegen": {},
    "build": {
      "dependsOn": ["^codegen"]
    },
    "build:test": {},
    "test:unit": {
      "dependsOn": ["^codegen"],
      "env": ["TEST_COVERAGE"]
    },
    "test:integration": {
      "dependsOn": ["^codegen"],
      "env": ["TEST_COVERAGE"]
    },
    "test:system": {},
    "test:miri": {},
    "dev": {
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^codegen"]
    },
    "lint:clippy": {},
    "lint:eslint": {
      "env": ["CHECK_TEMPORARILY_DISABLED_RULES"],
      "dependsOn": ["^codegen"]
    },
    "lint:tsc": {
      "dependsOn": ["^codegen"]
    },
    "fix:eslint": {
      "dependsOn": ["^codegen"]
    },
    "fix:clippy": {}
  },
  "globalDependencies": [
    "**/turbo.json",
    ".github/actions/**/**/*.yml",
    ".github/scripts/**/*.rs",
    ".github/workflows/**/*",
    ".env*",
    ".justfile",
    ".yarnrc",
    "Cargo.toml",
    "package.json"
  ]
}
