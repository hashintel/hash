{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["./dist", "./.next"],
      "dependsOn": ["codegen"]
    },
    "codegen": {
      "inputs": ["@hashintel/hash-shared/graphql/scalar-mapping"],
      "outputs": ["./src/**/*.gen.*"]
    },
    "fix:eslint": {
      "cache": false
    },
    "lint:eslint": {
      "env": ["CHECK_TEMPORARILY_DISABLED_RULES"],
      "outputs": []
    },
    "lint:tsc": {
      "outputs": []
    }
  }
}
