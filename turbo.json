{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    // Install commands
    "postinstall": {
      "cache": false
    },
    // Development commands
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["codegen"]
    },
    // Build commands
    "codegen": {
      "dependsOn": ["^build"]
    },
    "doc:dependency-diagram": {
      "cache": false,
      "dependsOn": ["@rust/hash-repo-chores#build"]
    },
    "build": {
      "dependsOn": ["codegen"]
    },
    "build:docker": {
      "cache": false
    },
    "build:types": {
      "dependsOn": ["^build:types"]
    },
    "compile": {
      "cache": false
    },
    "compile:release": {
      "cache": false
    },
    // Run commands
    "start:migrate": {
      "cache": false,
      "dependsOn": ["build", "^start:healthcheck"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["start:migrate"]
    },
    "start:healthcheck": {
      "cache": false,
      "dependsOn": ["compile:release"]
    },
    "start:test:migrate": {
      "cache": false,
      "dependsOn": ["build", "^start:test:healthcheck"]
    },
    "start:test": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["start:test:migrate"]
    },
    "start:test:healthcheck": {
      "cache": false,
      "dependsOn": ["compile"]
    },
    // Test commands
    "test:unit": {
      "dependsOn": ["codegen"],
      "env": ["TEST_COVERAGE"]
    },
    "test:integration": {
      "dependsOn": ["codegen", "^start:test:healthcheck"],
      "env": ["TEST_COVERAGE"]
    },
    "test:miri": {},
    // Benchmarks
    "bench:unit": {
      "dependsOn": ["codegen"],
      "cache": false
    },
    "bench:integration": {
      "dependsOn": ["codegen", "^start:healthcheck"],
      "cache": false
    },
    // Linting and formatting
    "lint": {
      "dependsOn": ["codegen"]
    },
    "lint:clippy": {},
    "lint:eslint": {
      "env": ["CHECK_TEMPORARILY_DISABLED_RULES"],
      "dependsOn": ["codegen", "@local/eslint#build"]
    },
    "lint:tsc": {
      "dependsOn": ["codegen", "build:types"]
    },
    "fix:eslint": {
      "dependsOn": ["codegen", "@local/eslint#build"]
    },
    "fix:clippy": {},
    "sentry:sourcemaps": {
      "dependsOn": ["build"]
    }
  },
  "globalDependencies": [
    // Changing any `turbo.json` file will trigger a full rebuild
    "**/turbo.json",
    // Changing workflows should trigger a full rebuild so it's checked in CI
    ".github/actions/**",
    ".github/scripts/**",
    ".github/workflows/**",
    // Dot-files
    ".*",
    ".cargo/**",
    ".config/**",
    ".yarn/**",
    // Manifest files
    "*.lock",
    ".config/mise/**",
    "Cargo.toml",
    "package.json",
    "pyproject.toml",
    "rust-toolchain.toml",
    "yarn*",
    // External services
    "apps/hash-external-services/**"
  ],
  "globalPassThroughEnv": [
    "CARGO_TERM_PROGRESS_WHEN",
    "RUSTC_WRAPPER",
    "CARGO_INCREMENTAL"
  ]
}
