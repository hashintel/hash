{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    // Install commands
    "postinstall": {
      "cache": false
    },

    // Development commands
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["codegen"]
    },

    // Build commands
    "codegen": {
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["codegen"]
    },
    "compile": {
      "cache": false
    },
    "compile:release": {
      "cache": false
    },

    // Run commands
    "start:migrate": {
      "cache": false,
      "dependsOn": ["^start:wait"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["start:migrate"]
    },
    "start:wait": {
      "cache": false
    },

    "start:test:migrate": {
      "cache": false,
      "dependsOn": ["^start:test:wait"]
    },
    "start:test": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["start:test:migrate"]
    },
    "start:test:wait": {
      "cache": false
    },

    // Test commands
    "test:unit": {
      "dependsOn": ["codegen"],
      "env": ["TEST_COVERAGE"]
    },
    "test:integration": {
      "dependsOn": ["codegen", "^start:test:wait"],
      "env": ["TEST_COVERAGE"]
    },
    "test:system": {
      "dependsOn": ["codegen", "^start:test:wait"]
    },
    "test:miri": {},

    // Benchmarks
    "bench:unit": {
      "dependsOn": ["codegen"],
      "cache": false
    },
    "bench:integration": {
      "dependsOn": ["codegen", "^start:wait"],
      "cache": false
    },

    // Linting and formatting
    "lint": {
      "dependsOn": ["codegen"]
    },
    "lint:clippy": {},
    "lint:eslint": {
      "env": ["CHECK_TEMPORARILY_DISABLED_RULES"],
      "dependsOn": ["codegen"]
    },
    "lint:tsc": {
      "dependsOn": ["codegen"]
    },
    "fix:eslint": {
      "dependsOn": ["codegen"]
    },
    "fix:clippy": {},
    "sentry:sourcemaps": {
      "dependsOn": ["build"]
    }
  },
  "globalDependencies": [
    "**/turbo.json",
    ".github/actions/**/*.yml",
    ".github/scripts/**/*.rs",
    ".github/workflows/**/*",
    ".env*",
    ".justfile",
    ".yarnrc",
    "Cargo.toml",
    "package.json",
    "apps/hash-external-services/**"
  ]
}
