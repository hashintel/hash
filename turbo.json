{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "codegen": {},
    "build": {
      "dependsOn": ["^build", "codegen"]
    },
    "test:unit": {
      "dependsOn": ["build"],
      "env": ["TEST_COVERAGE"]
    },
    "test:integration": {
      "dependsOn": ["build"],
      "env": ["TEST_COVERAGE"]
    },
    "test:system": {
      "dependsOn": ["build"]
    },
    "test:miri": {},
    "dev": {
      "persistent": true,
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["^build", "codegen"]
    },
    "lint:eslint": {
      "env": ["CHECK_TEMPORARILY_DISABLED_RULES"],
      "dependsOn": ["^build", "codegen"]
    },
    "lint:tsc": {
      "dependsOn": ["^build", "codegen"]
    },
    "fix:eslint": {
      "dependsOn": ["^build", "codegen"]
    }
  },
  "globalDependencies": [
    "**/turbo.json",
    ".github/workflows/package.yml",
    ".github/actions/**",
    ".env*",
    ".justfile",
    ".yarnrc",
    "package.json"
  ]
}
