{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "codegen": {},
    "build": {
      "dependsOn": ["^build", "codegen"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "dev": {
      "persistent": true,
      "dependsOn": ["build"]
    },

    "lint:eslint": {
      "env": ["CHECK_TEMPORARILY_DISABLED_RULES"],
      "dependsOn": ["^build", "codegen"]
    },
    "lint:tsc": {
      "dependsOn": ["^build", "codegen"]
    },
    "fix:eslint": {
      "dependsOn": ["^build", "codegen"]
    }
  },
  "globalDependencies": [
    "**/turbo.json",
    ".env",
    ".env.local",
    ".justfile",
    ".yarnrc",
    "package.json"
  ]
}
