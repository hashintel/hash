HASH_GRAPH_PG_USER=postgres
HASH_GRAPH_PG_PASSWORD=postgres
HASH_GRAPH_PG_HOST=localhost
HASH_GRAPH_PG_PORT=5432
HASH_GRAPH_PG_DATABASE=graph

HASH_GRAPH_PG_MIGRATION_URL=postgres://${HASH_GRAPH_PG_USER}:${HASH_GRAPH_PG_PASSWORD}@${HASH_GRAPH_PG_HOST}:${HASH_GRAPH_PG_PORT}/${HASH_GRAPH_PG_DATABASE}

###########################################
