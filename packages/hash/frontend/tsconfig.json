{
  "extends": "@local/tsconfig/legacy-base-tsconfig-to-refactor.json",
  "compilerOptions": {
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es5",
    "noEmit": true,
    "paths": {
      "@blockprotocol/type-system/*": ["@blockprotocol/type-system/slim/*"],
      "@blockprotocol/type-system-wasm": ["@blockprotocol/type-system/dist/wasm/type-system.wasm"],
    }
  },
  "include": [
    "assets.d.ts",
    "next-env.d.ts",
    "theme-override.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "codegen.config.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
