{
  "presets": [
    [
      "next/babel",
      {
        "preset-env": {
          "targets": {
            "chrome": "73"
          }
        }
      }
    ]
  ],
  "plugins": [
    "inline-react-svg",
    // Context: https://github.com/vercel/next.js/issues/20920
    // @todo consider removing after upgrading to Next.js 12
    "@babel/plugin-proposal-logical-assignment-operators",
    [
      "prismjs",
      {
        "languages": ["javascript", "json", "css", "markup", "typescript"],
        "theme": "solarizedlight",
        "css": true
      }
    ]
  ]
}
