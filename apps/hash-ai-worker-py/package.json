{
  "name": "@apps/hash-ai-worker-py",
  "version": "0.0.0-private",
  "private": true,
  "description": "A Python 'AI' worker for HASH",
  "scripts": {
    "build:docker": "docker buildx build --tag hash-ai-worker-py --file docker/Dockerfile ../../ --load",
    "dev": "poetry run python -m worker",
    "fix:black": "poetry run black .",
    "fix:lock-files": "poetry lock --no-update",
    "fix:ruff": "poetry run ruff . --fix",
    "lint:black": "poetry run black --check --diff --color .",
    "lint:lock-files": "poetry lock --check",
    "lint:mypy": "poetry run mypy .",
    "lint:ruff": "poetry run ruff .",
    "poetry:install": "poetry install --no-root --no-interaction",
    "poetry:install-production": "poetry install --no-root --no-interaction --only main",
    "test:integration": "poetry run pytest tests/ --cov=worker --cov-report=lcov --cov-branch $([ -z ${CI} ] || echo '--vcr-record=none')",
    "test:unit": "poetry run pytest --pyargs worker --cov=worker --cov-report=lcov --cov-branch $([ -z ${CI} ] || echo '--vcr-record=none')"
  },
  "dependencies": {
    "@local/hash-graph-types-py": "0.0.0-private"
  }
}
