{
  "$id": "https://hash.ai/schemas/v1/kratos-identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "emails": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "format": "email",
            "pattern": "^(([^<>()\\[\\]\\.,;:\\s@\"]+(\\.[^<>()\\[\\]\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$",
            "title": "E-Mail",
            "minLength": 3,
            "ory.sh/kratos": {
              "credentials": {
                "password": {
                  "identifier": true
                },
                "totp": {
                  "account_name": true
                }
              },
              "verification": { "via": "email" },
              "recovery": { "via": "email" }
            }
          }
        }
      },
      "required": ["emails"],
      "additionalProperties": false
    }
  }
}
