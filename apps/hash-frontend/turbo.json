{
  "extends": ["//"],
  "tasks": {
    "codegen": {
      // Outputs of GraphQL generation
      "outputs": ["./src/**/*.gen.*"],
      "dependsOn": ["^build"]
    },
    "build": {
      "outputs": ["./.next/**"],
      "dependsOn": ["^build", "codegen"]
    },
    "start": {
      "dependsOn": ["build"]
    }
  }
}
