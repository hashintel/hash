{
  "extends": "@local/tsconfig/legacy-base-tsconfig-to-refactor.json",
  "compilerOptions": {
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2021"
  },
  "include": [
    "assets.d.ts",
    "next-env.d.ts",
    "theme-override.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "codegen.config.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
