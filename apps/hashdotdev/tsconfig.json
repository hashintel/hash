{
  "extends": "@local/tsconfig/legacy-base-tsconfig-to-refactor.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "paths": {},
    "sourceMap": true,
    "target": "ES2020",
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "@types/gtag.js",
    "next-env.d.ts",
    "theme-override.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
