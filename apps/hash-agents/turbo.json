{
  "extends": ["//"],
  "pipeline": {
    "codegen": {
      "outputs": ["./agents/**/io_types.py", "./src/agents.ts"],
      "dependsOn": ["^build", "install:tools"]
    },
    "install:tools": {
      "outputs": ["./.venv/**"],
      "inputs": ["pyproject.toml", "poetry.lock"]
    },
    "build:docker": {
      "cache": false
    },
    "fix:black": {
      "dependsOn": ["install:tools"]
    },
    "fix:ruff": {
      "dependsOn": ["install:tools"]
    },
    "fix:lock-files": {
      "dependsOn": ["install:tools"],
      "inputs": ["poetry.lock", "pyproject.toml"],
      "outputs": ["poetry.lock"]
    },
    "lint:black": {
      "dependsOn": ["install:tools"]
    },
    "lint:lock-files": {
      "dependsOn": ["install:tools"],
      "inputs": ["poetry.lock", "pyproject.toml"]
    },
    "lint:ruff": {
      "dependsOn": ["install:tools"]
    }
  }
}
