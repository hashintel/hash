{
  "manifest_version": 3,
  "name": "HASH Assistant",
  "description": "A browser extension for gathering info from the web into your HASH account.",
  "options_page": "options.html",
  "background": {
    "service_worker": "background.bundle.js"
  },
  "host_permissions": ["*://*.hash.ai/*"],
  "permissions": ["storage", "tabs"],
  "action": {
    "default_icon": "icon-256.png",
    "default_popup": "popup.html",
    "default_tooltip": "Create entities in HASH from this page"
  },
  "icons": {
    "256": "icon-256.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["content.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "icon-256.png"],
      "matches": []
    }
  ]
}
