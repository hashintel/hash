{
  "name": "@apps/hash-graph",
  "version": "0.0.0-private",
  "private": true,
  "description": "The HASH Graph",
  "type": "module",
  "exports": {
    "./type-defs/*": {
      "types": "./type-defs/*.ts",
      "default": "./type-defs/*.ts",
      "node": "./type-defs/*.ts"
    }
  },
  "scripts": {
    "build:docker": "docker buildx build --build-arg PROFILE=production --tag hash-graph --file docker/Dockerfile ../../ --load",
    "codegen:generate-openapi-specs": "just generate-openapi-specs",
    "compile": "cargo build --bin hash-graph --all-features",
    "compile:release": "cargo build --bin hash-graph --release",
    "dev": "../../target/debug/hash-graph server",
    "dev:healthcheck": "../../target/debug/hash-graph server --healthcheck",
    "dev:migrate": "../../target/debug/hash-graph migrate --user postgres --password postgres",
    "dev:test": "../../target/debug/hash-graph test-server --api-port 4001",
    "dev:test:healthcheck": "../../target/debug/hash-graph test-server --api-port 4001 --healthcheck",
    "exe": "tsx",
    "fix:clippy": "just clippy --fix",
    "lint:clippy": "just clippy",
    "reset-database": "httpyac send --all tests/reset-database.http",
    "start": "yarn start:type-fetcher & yarn start:server",
    "start:migrate": "cargo run --bin hash-graph --all-features --release -- migrate --user postgres --password postgres",
    "start:server": "cargo run --bin hash-graph --all-features --release -- server",
    "test:integration": "just test-integration",
    "test:unit": "just test-unit"
  },
  "dependencies": {
    "@rust/graph": "0.0.0-private",
    "@rust/graph-api": "0.0.0-private",
    "@rust/hash-graph": "0.0.0-private",
    "@rust/type-fetcher": "0.0.0-private"
  },
  "devDependencies": {
    "@rust/graph-test-data": "0.0.0-private",
    "httpyac": "6.14.0",
    "quicktype": "16.0.43",
    "tsx": "4.16.2",
    "typescript": "5.5.3"
  }
}
