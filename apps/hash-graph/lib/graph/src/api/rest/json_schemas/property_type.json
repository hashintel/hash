{
  "title": "Property Type",
  "description": "Specifies the structure of a Block Protocol property type",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "enum": [
        "https://blockprotocol.org/types/modules/graph/0.3/schema/property-type"
      ]
    },
    "kind": {
      "enum": [
        "propertyType"
      ]
    },
    "$id": {
      "title": "Versioned URL",
      "description": "The versioned URL of a Block Protocol ontology type (the $id of the schema). It should be of the form `${baseUrl}v/${versionNumber}`",
      "type": "string",
      "format": "uri",
      "maxLength": 2048,
      "x-$comment": "The version number must be a valid unsigned 32-bit integer, that is, between 0 and 4,294,967,295 (inclusive)."
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "oneOf": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/propertyValues"
      }
    }
  },
  "required": [
    "$schema",
    "kind",
    "$id",
    "title",
    "oneOf"
  ],
  "additionalProperties": false,
  "x-$defs": {
    "propertyValues": {
      "title": "propertyValues",
      "description": "The definition of potential property values, either references to data types, objects made up of more property types, or an array where the items are defined from a set of other property values definitions.",
      "oneOf": [
        {
          "$schema": "https://json-schema.org/draft/2019-09/schema",
          "$id": "https://blockprotocol.org/types/modules/graph/0.3/schema/data-type-reference",
          "title": "Data Type Reference",
          "description": "A reference to a data type.",
          "type": "object",
          "properties": {
            "$ref": {
              "$comment": "The versioned URL of a data type (the $id of the data type's schema)",
              "$ref": "#/properties/$id"
            }
          },
          "required": [
            "$ref"
          ],
          "additionalProperties": false
        },
        {
          "title": "propertyObjectValue",
          "type": "object",
          "properties": {
            "type": {
              "const": "object"
            },
            "properties": {
              "$schema": "https://json-schema.org/draft/2019-09/schema",
              "$id": "https://blockprotocol.org/types/modules/graph/0.3/schema/property-type-object",
              "title": "Property Type Object",
              "description": "A JSON object where each entry is constrained by a property type.",
              "type": "object",
              "propertyNames": {
                "$comment": "Property names must be a valid Base URL to a property type",
                "$schema": "https://json-schema.org/draft/2019-09/schema",
                "$id": "https://blockprotocol.org/types/modules/graph/0.3/schema/base-url",
                "title": "Base URL",
                "description": "The base URL of a Block Protocol ontology type (the $id of the schema, without the versioned suffix). It should a valid URL, with a trailing slash.",
                "type": "string",
                "format": "uri",
                "maxLength": 2048
              },
              "patternProperties": {
                ".*": {
                  "oneOf": [
                    {
                      "$schema": "https://json-schema.org/draft/2019-09/schema",
                      "$id": "https://blockprotocol.org/types/modules/graph/0.3/schema/property-type-reference",
                      "title": "Property Type Reference",
                      "description": "A reference to a property type.",
                      "type": "object",
                      "properties": {
                        "$ref": {
                          "$comment": "The versioned URL of a property type (the $id of the property type's schema)",
                          "$ref": "#/properties/$id"
                        }
                      },
                      "required": [
                        "$ref"
                      ],
                      "additionalProperties": false
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "array"
                        },
                        "items": {
                          "$comment": "Property object values must be defined through references to the full Versioned URL of the same property type used for the property name.",
                          "$ref": "#/$defs/propertyValues/oneOf/1/properties/properties/patternProperties/.*/oneOf/0"
                        },
                        "minItems": {
                          "type": "integer",
                          "minimum": 0
                        },
                        "maxItems": {
                          "type": "integer",
                          "minimum": 0
                        }
                      },
                      "required": [
                        "type",
                        "items"
                      ],
                      "additionalProperties": false
                    }
                  ]
                }
              }
            }
          },
          "minProperties": 1,
          "required": [
            "type",
            "properties"
          ]
        },
        {
          "title": "propertyArrayValue",
          "type": "object",
          "properties": {
            "type": {
              "const": "array"
            },
            "items": {
              "type": "object",
              "properties": {
                "oneOf": {
                  "type": "array",
                  "items": {
                    "$ref": "#/$defs/propertyValues"
                  },
                  "minItems": 1
                }
              },
              "required": [
                "oneOf"
              ],
              "additionalProperties": false
            },
            "minItems": {
              "type": "integer",
              "minimum": 0
            },
            "maxItems": {
              "type": "integer",
              "minimum": 0
            }
          },
          "required": [
            "type",
            "items"
          ],
          "additionalProperties": false
        }
      ]
    }
  }
}
  }
}