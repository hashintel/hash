{
  "extends": ["//"],
  "tasks": {
    "compile": {
      "cache": false
    },
    "compile:release": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["dev:migrate"]
    },
    "dev:migrate": {
      "cache": false,
      "dependsOn": ["compile"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["start:migrate"]
    },
    "start:migrate": {
      "cache": false,
      "dependsOn": ["compile:release"]
    },
    "build:docker": {
      "cache": false
    },
    "codegen:generate-openapi-specs": {
      "outputs": ["openapi/openapi.json", "openapi/models/**"]
    },
    "test:integration": {
      "dependsOn": ["build"]
    }
  }
}
