    let %1: Integer
    let %2: Integer
    let %3: (Integer, Integer)

    bb0(): {
        switchInt(1) -> [0: bb2(), 1: bb1()]
    }

    bb1(): {
        %1 = 1
        %2 = 2
        %3 = (%1, %2)

        goto -> bb3(%3.0)
    }

    bb2(): {
        goto -> bb3(0)
    }

    bb3(%0): {
        return %0
    }
}
