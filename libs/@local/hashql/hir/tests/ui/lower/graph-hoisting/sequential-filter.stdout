════ Initial HIR ═══════════════════════════════════════════════════════════════

let a:0 = true,
    b:0 = true
in
::graph::tail::collect(
    ::graph::body::filter(
        ::graph::body::filter(
            ::graph::head::entities(::graph::tmp::decision_time_now()),
            (vertex:0: _0): _1 -> ::core::cmp::eq(b:0, a:0)
        ),
        (vertex:1: _2): _3 -> ::core::cmp::eq(a:0, b:0)
    )
)

════ HIR after graph hoisting ══════════════════════════════════════════════════

let a:0 = true,
    b:0 = true,
    %4 = ::graph::tmp::decision_time_now(),
    %5 = b:0 == a:0,
    %6 = a:0 == b:0,
    %7 = ::graph::head::entities(%4)
         |> ::graph::body::filter((vertex:0: Entity): Boolean -> let  in %5)
         |> ::graph::body::filter((vertex:1: Entity): Boolean -> let  in %6)
         |> ::graph::tail::collect
in
%7
