{
  "extends": ["//"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "codegen"],
      "inputs": ["./**/*.py", "pyproject.toml", "poetry.lock", "LICENSE*"],
      "outputs": ["dist/**"]
    },
    "poetry:venv": {
      "cache": false
    },
    "poetry:install": {
      "cache": false
    },
    "poetry:install-production": {
      "cache": false
    },
    "fix:black": {
      "inputs": ["./**/*.py", "pyproject.toml"]
    },
    "fix:ruff": {
      "inputs": ["./**/*.py", "pyproject.toml"]
    },
    "fix:lock-files": {
      "inputs": ["poetry.lock", "pyproject.toml"],
      "outputs": ["poetry.lock"]
    },
    "lint:black": {
      "inputs": ["./**/*.py", "pyproject.toml"]
    },
    "lint:lock-files": {
      "inputs": ["poetry.lock", "pyproject.toml"]
    },
    "lint:ruff": {
      "inputs": ["./**/*.py", "pyproject.toml"]
    },
    "lint:mypy": {
      "inputs": ["./**/*.py", "pyproject.toml"]
    }
  }
}
