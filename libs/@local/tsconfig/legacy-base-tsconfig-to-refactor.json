{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "baseUrl": ".",
    "paths": {
      "@local/hash-shared/*": ["../../../libs/@local/hash-shared/src/*"],
      "@local/hash-backend-utils/*": [
        "../../../libs/@local/hash-backend-utils/src/*"
      ]
    }
  },
  "ts-node": {
    "transpileOnly": true
  }
}
