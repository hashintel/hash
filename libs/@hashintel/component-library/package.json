{
  "name": "@hashintel/component-library",
  "version": "0.0.1",
  "description": "HASH Component Library built with React, Ark UI, and PandaCSS",
  "repository": {
    "type": "git",
    "url": "https://github.com/hashintel/hash.git",
    "directory": "libs/@hashintel/component-library"
  },
  "license": "(MIT OR Apache-2.0)",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE-APACHE.md",
    "LICENSE-MIT.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "vite build --watch",
    "clean": "rm -rf dist",
    "fix:eslint": "eslint --fix .",
    "lint:eslint": "eslint --report-unused-disable-directives .",
    "lint:tsc": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@ark-ui/react": "5.25.0",
    "@hashintel/styled-system": "0.0.1",
    "@pandacss/dev": "1.3.1",
    "canvas": "3.2.0",
    "motion": "12.23.19"
  },
  "devDependencies": {
    "@local/eslint": "0.0.0-private",
    "@local/tsconfig": "0.0.0-private",
    "@storybook/addon-docs": "^9.1.8",
    "@storybook/react-vite": "9.1.8",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.1",
    "@testing-library/user-event": "14.5.2",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "eslint": "9.36.0",
    "eslint-plugin-storybook": "^9.1.8",
    "jsdom": "27.0.0",
    "lucide-react": "0.544.0",
    "storybook": "9.1.8",
    "typescript": "5.9.2",
    "vite": "7.1.7",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
