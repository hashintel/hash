{
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["./dist/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "storybook:build": {
      "outputs": ["./storybook-static/**"],
      "dependsOn": ["^build"]
    }
  }
}
