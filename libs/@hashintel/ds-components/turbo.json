{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "lint:eslint": {
      "dependsOn": [
        "codegen",
        "@local/eslint#build",
        "@hashintel/refractive#build:types"
      ]
    },
    "lint:tsc": {
      "dependsOn": [
        "codegen",
        "build:types",
        "@hashintel/refractive#build:types"
      ]
    },
    "build": {
      "dependsOn": ["codegen", "^build"],
      "outputs": ["dist/**"]
    },
    "codegen": {
      "dependsOn": ["^codegen", "@hashintel/ds-theme#build"],
      "outputs": ["styled-system/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "storybook:build": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    }
  }
}
