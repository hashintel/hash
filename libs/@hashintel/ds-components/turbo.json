{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["codegen", "^build"],
      "outputs": ["dist/**"]
    },
    "codegen": {
      "dependsOn": ["^codegen", "@hashintel/ds-theme#build"],
      "outputs": ["styled-system/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "storybook:build": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    }
  }
}
