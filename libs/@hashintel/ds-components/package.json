{
  "name": "@hashintel/ds-components",
  "version": "0.0.1",
  "description": "HASH Component Library built with React, Ark UI, and PandaCSS",
  "repository": {
    "type": "git",
    "url": "https://github.com/hashintel/hash.git",
    "directory": "libs/@hashintel/ds-components"
  },
  "license": "(MIT OR Apache-2.0)",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE-APACHE.md",
    "LICENSE-MIT.md",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "codegen": "panda codegen --clean",
    "dev": "tsdown --watch",
    "fix": "npm-run-all --continue-on-error \"fix:*\"",
    "fix:eslint": "eslint --fix .",
    "fix:format": "biome format --write",
    "lint": "npm-run-all --continue-on-error \"lint:*\"",
    "lint:eslint": "eslint --report-unused-disable-directives .",
    "lint:tsc": "tsc --noEmit",
    "prepare": "yarn run codegen",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@ark-ui/react": "5.26.2",
    "@hashintel/ds-helpers": "0.0.1",
    "@hashintel/ds-theme": "0.0.1",
    "@hashintel/refractive": "0.0.0",
    "canvas": "3.2.0",
    "motion": "12.23.24"
  },
  "devDependencies": {
    "@figma/code-connect": "1.3.11",
    "@local/eslint": "0.0.0-private",
    "@local/tsconfig": "0.0.0-private",
    "@pandacss/dev": "1.4.3",
    "@storybook/addon-docs": "9.1.13",
    "@storybook/global": "5.0.0",
    "@storybook/react": "9.1.13",
    "@storybook/react-vite": "9.1.13",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "22.18.13",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.0.4",
    "@vitest/browser-playwright": "^4.0.16",
    "bumpp": "^10.3.2",
    "eslint": "9.38.0",
    "eslint-plugin-storybook": "9.1.13",
    "lucide-react": "0.544.0",
    "npm-run-all": "4.1.5",
    "storybook": "9.1.17",
    "tsdown": "^0.18.1",
    "typescript": "5.9.3",
    "vite": "7.1.11",
    "vite-plugin-dts": "4.5.4",
    "vitest": "^4.0.16",
    "vitest-browser-react": "^2.0.2"
  },
  "peerDependencies": {
    "@ark-ui/react": "^5.26.2",
    "@hashintel/ds-helpers": "0.0.1",
    "@hashintel/ds-theme": "0.0.1",
    "@hashintel/refractive": "0.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
