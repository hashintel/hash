{
  "name": "@hashintel/ds-theme",
  "version": "0.0.3",
  "description": "HASH PandaCSS Preset",
  "license": "(MIT OR Apache-2.0)",
  "repository": {
    "type": "git",
    "url": "https://github.com/hashintel/hash.git",
    "directory": "libs/@hashintel/ds-theme"
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "LICENSE",
    "LICENSE-APACHE.md",
    "LICENSE-MIT.md",
    "README.md"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/main.js",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "default": "./dist/main.js"
    },
    "./theme": {
      "types": "./dist/theme.d.ts",
      "default": "./dist/theme.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "codegen": "npm-run-all --continue-on-error codegen:colors codegen:tokens",
    "codegen:colors": "tsx scripts/generate-colors-radix.ts",
    "codegen:tokens": "tsx scripts/generate-tokens.ts",
    "dev": "tsdown --watch",
    "dev:test": "vitest dev",
    "fix": "npm-run-all --continue-on-error \"fix:*\"",
    "fix:format": "biome format --write",
    "lint": "npm-run-all --continue-on-error \"lint:*\"",
    "lint:tsc": "tsc --noEmit",
    "prepare": "turbo run build",
    "test:unit": "vitest run"
  },
  "devDependencies": {
    "@pandacss/dev": "1.4.3",
    "@radix-ui/colors": "3.0.0",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "22.18.13",
    "case-anything": "3.1.0",
    "colorjs.io": "0.6.1",
    "npm-run-all": "4.1.5",
    "tsdown": "^0.18.1",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vitest": "^4.0.16",
    "zod": "4.1.12"
  }
}
