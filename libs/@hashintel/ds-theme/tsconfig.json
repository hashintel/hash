{
  "extends": "@total-typescript/tsconfig/tsc/dom/library-monorepo",
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "ES2021"],
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    ".storybook/**/*"
  ]
}
