{
  "name": "@hashintel/ds-helpers",
  "version": "0.0.4",
  "description": "HASH PandaCSS Styled System",
  "license": "(MIT OR Apache-2.0)",
  "repository": {
    "type": "git",
    "url": "https://github.com/hashintel/hash.git",
    "directory": "libs/@hashintel/ds-helpers"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "LICENSE-APACHE.md",
    "LICENSE-MIT.md",
    "README.md",
    "styled-system"
  ],
  "type": "module",
  "sideEffects": false,
  "exports": {
    "./css": {
      "types": "./styled-system/css/index.d.ts",
      "require": "./styled-system/css/index.mjs",
      "import": "./styled-system/css/index.mjs"
    },
    "./tokens": {
      "types": "./styled-system/tokens/index.d.ts",
      "require": "./styled-system/tokens/index.mjs",
      "import": "./styled-system/tokens/index.mjs"
    },
    "./types": {
      "types": "./styled-system/types/index.d.ts",
      "require": "./styled-system/types/index.mjs",
      "import": "./styled-system/types/index.mjs"
    },
    "./patterns": {
      "types": "./styled-system/patterns/index.d.ts",
      "require": "./styled-system/patterns/index.mjs",
      "import": "./styled-system/patterns/index.mjs"
    },
    "./jsx": {
      "types": "./styled-system/jsx/index.d.ts",
      "require": "./styled-system/jsx/index.mjs",
      "import": "./styled-system/jsx/index.mjs"
    },
    "./styles.css": "./styled-system/styles.css"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "ladle build",
    "codegen": "panda codegen --clean",
    "dev": "panda codegen --watch & ladle serve",
    "fix": "npm-run-all --continue-on-error \"fix:*\"",
    "fix:format": "biome format --write",
    "lint": "npm-run-all --continue-on-error \"lint:*\"",
    "lint:tsc": "tsc --noEmit",
    "preflight:ladle": "ladle build && ladle preview",
    "prepare": "turbo run codegen",
    "test:snapshots": "ladle build && playwright test",
    "test:update": "ladle build && playwright test --update-snapshots"
  },
  "devDependencies": {
    "@hashintel/ds-theme": "0.0.3",
    "@ladle/react": "5.1.1",
    "@mantine/hooks": "8.3.5",
    "@pandacss/dev": "1.4.3",
    "@playwright/test": "1.57.0",
    "@radix-ui/colors": "3.0.0",
    "@tool-belt/type-predicates": "1.4.1",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "22.18.13",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.0.4",
    "color2k": "2.0.3",
    "npm-run-all": "4.1.5",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sync-fetch": "0.5.2",
    "tsdown": "^0.18.1",
    "typescript": "5.9.3",
    "vite": "7.1.11",
    "vitest": "^4.0.16"
  }
}
