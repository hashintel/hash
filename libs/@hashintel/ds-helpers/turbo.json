{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["codegen", "^build"],
      "outputs": [".build/ladle/**"]
    },
    "codegen": {
      "dependsOn": ["^codegen", "@hashintel/ds-theme#build"],
      "outputs": ["styled-system/**"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["playwright-report/**"]
    }
  }
}
