{
  "$schema": "https://turborepo.org/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["styled-system/**"]
    },
    "build:ladle": {
      "dependsOn": ["build"],
      "outputs": [".build/ladle/**"]
    },
    "lint:tsc": {
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "with": ["@hashintel/ds-theme#dev"]
    }
  }
}
